<UIVisual class="UIVisual">
    <id>pause_root</id>
    <controller ui="PAUSE"/>
    <position>
        <coord>
            <x>640</x>
            <y>360</y>
        </coord>
    </position>
    <sprite>
        <sprite>ui_play_overlay</sprite>
        <scale>2</scale>
    </sprite>
    <children>
        <UIButton class="UIButton">
            <id>pause_resume_button</id>
            <position>
                <coord>
                    <x>640</x>
                    <y>400</y>
                </coord>
            </position>
            <onClick>resume</onClick>
            <sprite>
                <sprite>large_button_normal</sprite>
                <scale>4</scale>
            </sprite>
            <hover>
                <sprite>large_button_hover</sprite>
                <scale>4</scale>
            </hover>
            <clicked>
                <sprite>large_button_click</sprite>
                <scale>4</scale>
            </clicked>
            <locked>
                <sprite>large_button_locked</sprite>
                <scale>4</scale>
            </locked>
            <hitShape>hitshape_button</hitShape>
            <children>
                <UILabel class="UILabel">
                    <id>pause_resume_button_label</id>
                    <position>
                        <coord>
                            <x>640</x>
                            <y>400</y>
                        </coord>
                    </position>
                    <text>Resume</text>
                    <scale>2</scale>
                </UILabel>
            </children>
        </UIButton>
        <UIButton class="UIButton">
            <id>pause_quit_button</id>
            <position>
                <coord>
                    <x>640</x>
                    <y>320</y>
                </coord>
            </position>
            <onClick>quit</onClick>
            <sprite>
                <sprite>large_button_normal</sprite>
                <scale>4</scale>
            </sprite>
            <hover>
                <sprite>large_button_hover</sprite>
                <scale>4</scale>
            </hover>
            <clicked>
                <sprite>large_button_click</sprite>
                <scale>4</scale>
            </clicked>
            <locked>
                <sprite>large_button_locked</sprite>
                <scale>4</scale>
            </locked>
            <hitShape>hitshape_button</hitShape>
            <children>
                <UILabel class="UILabel">
                    <id>pause_quit_button_label</id>
                    <position>
                        <coord>
                            <x>640</x>
                            <y>320</y>
                        </coord>
                    </position>
                    <text>Quit</text>
                    <scale>2</scale>
                </UILabel>
            </children>
        </UIButton>
    </children>
</UIVisual>