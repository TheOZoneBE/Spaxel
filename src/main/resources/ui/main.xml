<ui type="MAIN" controller="code.ui.controllers.MainController">
    <style>/ui/styles/common.json</style>
    <style>/ui/styles/main.json</style>
    <body id="root">
        <element id="title_label">
            SP{white}XEL
        </element>
        <element id="play_button" class="large_button" onClick="startGame">
            Play
        </element>
        <element id="achievements_button" class="large_button" onClick="achievements">
            Achievements
        </element>
        <element id="options_button" class="large_button" onClick="options">
            Options
        </element>
        <element id="credits_button" class="large_button" onClick="credits">
            Credits
        </element>
        <element id="quit_button" class="large_button" onClick="quit">
            Quit
        </element>
    </body>
</ui>